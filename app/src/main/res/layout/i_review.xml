<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    style="@style/BaseCardView"
    android:elevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_initial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:text="P"
            android:background="@drawable/bg_text_initial"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_author"
            app:layout_constraintBottom_toBottomOf="@id/iv_author"
            app:layout_constraintLeft_toLeftOf="@id/iv_author"
            app:layout_constraintRight_toRightOf="@id/iv_author"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_author"
            android:layout_width="0dp"
            android:layout_height="@dimen/_42sdp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Puger Pamungkas"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_author"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Lorem Ipsum Lala Yeye kasdnfkngkjdnfgkdnfg gsdkjfgkdjfg dkfjg dfgsdkfgds fgkdjfgdjkfg"
            app:layout_constraintTop_toBottomOf="@id/tv_author"
            app:layout_constraintLeft_toLeftOf="@id/tv_author"
            app:layout_constraintRight_toRightOf="@id/tv_author"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_more_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>